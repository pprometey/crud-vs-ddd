@model DoctorBooking.CRUD.Db.Schedule

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Schedule</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(m => m.Date)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(m => m.Date)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(m => m.StartTime)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(m => m.StartTime)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(m => m.EndTime)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(m => m.EndTime)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(m => m.Price)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(m => m.Price)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(m => m.IsBusy)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(m => m.IsBusy)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(m => m.Doctor)</dt>
        <dd class="col-sm-10">@(Model.Doctor?.User?.Name ?? Model.Doctor?.Id.ToString() ?? "")</dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
